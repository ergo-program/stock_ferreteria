<div class="editForm">
  <div class="row">
    <div class="col-md-12">
    <div class="login-form-fieldset col-md-12">
      <h2>Editar Usuario</h2>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
        <%= devise_error_messages! %>

        <div class="field col-md-8">
          <%= f.label :email, "Correo" %><br />
          <%= f.email_field :email, autofocus: true, :class =>'form-control' %>
        </div>

        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
        <% end %>
        
        <div class="field col-md-8">
          <%= f.label :password, "Contrase単a" %> <i>(dejar en blanco si no desea cambiarlo)</i><br />
          <%= f.password_field :password, autocomplete: "off", :class =>'form-control' %>
        </div>

        <div class="field col-md-8">
          <%= f.label :password_confirmation, "Confirmar Contrase単a" %><br />
          <%= f.password_field :password_confirmation, autocomplete: "off", :class =>'form-control' %>
        </div>
        


        <div class="field col-md-8">
          <%= f.label :current_password, "Contrase単a Actual" %> <i>(se necesita su contrase単a actual para confirmar los cambios)</i><br />
          <%= f.password_field :current_password, autocomplete: "off" , :class =>'form-control'%>
        </div>

        <div class="actions col-md-5">
          <%= f.submit "Actualizar", class: 'btn btn-success' %>
        </div>

      <% end %>

      </div>
    </div>
  </div>
</div>