<div class="login">
  <div class="row">
    <div class="col-md-12">
      <h2 class="login-form">Iniciar Sesion</h2>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
       <div class="login-form-fieldset col-md-12">
        <div class="field col-md-8">
          <%= f.label :email, "Correo" %><br />
          <%= f.email_field :email, autofocus: true, :class =>'form-control' %>
        </div>

        <div class="field col-md-8">
          <%= f.label :password, "ContraseÃ±a" %><br />
          <%= f.password_field :password, autocomplete: "off", :class =>'form-control' %>
        </div>

        <% if devise_mapping.rememberable? -%>
          <div class="field col-md-8">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me, "Recuerdame" %>
          </div>
        <% end -%>

        <div class="actions col-md-8">
          <%= f.submit "Iniciar Sesion", class: 'btn btn-success' %>
        </div>
      <% end %>
      </div>

    </div>
  </div>
</div>