<% content_for :content_header  do %>
  <section class="content-header">
    <h1>Show <small>person</small></h1>

    <ol class="breadcrumb">
      <li><a href="/"><i class="fa fa-dashboard"></i> Home</a></li>
      <li><%= link_to "People", people_path %></li>
      <li class="active">Show</li>
    </ol>
  </section>
<% end %>

<section class="content">
  <div class="row">
    <div class="col-md-12">
      <div class="box box-primary">
        <div class="box-header">
          <div class="box-tools pull-right">
            <%= link_to edit_person_path(@person), :class => 'btn btn-primary' do %>
              <span class="glyphicon glyphicon-pencil"></span>
              Edit
            <% end %>          
          </div>
        </div>
        <div class="box-body">
          <dl class="dl-horizontal">
            <dt>Nombre:</dt>
            <dd><%= @person.nombre %></dd>

            <dt>Telefono:</dt>
            <dd><%= @person.telefono %></dd>

            <dt>Direccion:</dt>
            <dd><%= @person.direccion %></dd>

            <dt>Documento:</dt>
            <dd><%= @person.documento %></dd>

            <dt>Tipo:</dt>
            <dd><%= @person.tipo %></dd>

          </dl>
        </div>
      </div>
    </div>
  </div>
</section>

