<% content_for :content_header  do %>
  <section class="content-header">
    <h1>Clientes/Proveedores</h1>

    <ol class="breadcrumb">
      <li><a href="/"><i class="fa fa-dashboard"></i> Inicio</a></li>
      <li class="active">Clientes y proveedores</li>
    </ol>    
  </section>
<% end %>

<section class="content">
  <div class="box-header">
      <div class="box-tools pull-left">

      <%= link_to new_person_path(@person), :class => 'btn btn-success' do %>
              <span class="glyphicon glyphicon-plus"></span>
              Nuevo
            <% end %> 
    </div> 
  </div>  
  
  <div class="row">
    <div class="col-xs-12">

      <div class="box box-primary">

        <div class="box-body table-responsive">
          <table id="tablePeople" class="table table-bordered table-hover">
            <thead>
              <tr>
                <th>Nombre</th>
                <th>Telefono</th>
                <th>Direccion</th>
                <th>Documento</th>
                <th>Tipo</th>
                <th></th>
              </tr>
            </thead>
            <tbody>
              <%= content_tag_for(:tr, @people) do |person| %>
                <td><%= person.nombre %></td>
                <td><%= person.telefono %></td>
                <td><%= person.direccion %></td>
                <td><%= person.documento %></td>
                <td><%= person.tipo %></td> 
                <td class="row">
                <%= link_to person, class: 'btn btn-info', title: 'Ver', 'data-toggle' => 'tooltip', 'data-placement' => 'rigth' do %>
                  <span class= "fa fa-eye"></span>
                <% end %>

                <%= link_to edit_person_path(person), class: 'btn btn-success', title: 'Editar', 'data-toggle' => 'tooltip', 'data-placement' => 'rigth' do %>
                    <span class= "fa fa-edit"></span>
                <% end %>

                <%= link_to person, method: :delete, data: { confirm: 'Esta seguro que desea eliminar este registro?' }, class: 'btn btn-danger', title: 'Eliminar', 'data-toggle' => 'tooltip', 'data-placement' => 'rigth' do %>
                    <span class= "fa fa-trash"></span>
                <% end %>
              </td>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</section>

