<section class="content invoice">
  <div class="row">
    <div class="col-md-10">
      <%= form_for(@person, :html => { :role => "form" }) do |f| %>

        <% if @person.errors.any? %>
          <div class="alert alert-danger alert-dismissable" role="alert">
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">x</button>
            <ul>
            <% @person.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
            </ul>
          </div>
        <% end %>

      <form class="form-horizontal">

      <p class="text-primary"><i class="">* Campos obligatorios</i></p>

      <div class="field col-md-12 form-group"></div>
      
      <div class="field col-md-12 form-group">
        <div class="field col-md-6 form-group required">
          <%= f.label :nombre, :class => 'control-label' %>
          <%= f.text_field :nombre,:maxlength => 50, :class => "form-control", autofocus:true %>
        </div>
        <div class="field col-md-6 form-group required">
          <%= f.label :direccion, :class => 'control-label' %>
          <%= f.text_field :direccion,:maxlength => 50, :class => "form-control" %>
        </div>
      </div>
      <div class="field col-md-12 form-group">
        <div class="field col-md-4 form-group required">
          <%= f.label :documento, :class => 'control-label' %>
          <%= f.text_field :documento,:maxlength => 10, :class => "form-control" %>
        </div>
        <div class="field col-md-4 form-group required">
          <%= f.label :telefono, :class => 'control-label' %>
          <%= f.text_field :telefono,:maxlength => 10, :class => "form-control" %>
        </div>
        <div class="field col-md-4 form-group required">
           <%= f.label :tipo, :class => 'control-label'%> <br class="">
            <select name="person[tipo]" class="btn btn-default">
              <option value="Cliente" selected="selected">Cliente</option>
              <option value="Proveedor">Proveedor</option>
            </select>
        </div>
      </div>

      <div class="form-group">
        <div class="actions">
          <% if controller.action_name == 'edit'  %>
            <%= f.submit "Guardar", :class => "btn btn-primary" %>
          <% else %>
            <%= f.submit "Agregar", :class => 'btn btn-primary'%>
          <% end %>
            <%= link_to 'Cancelar',  people_path , class: 'btn btn-default' %>
          <% end %>
        </div>
      </div>
      </form> 
    </div>
  </div>
</section> 