<% content_for :content_header  do %>
  <section class="content-header">
    <h1>Listing <small>motives</small></h1>

    <ol class="breadcrumb">
      <li><a href="/"><i class="fa fa-dashboard"></i> Home</a></li>
      <li class="active">motives</li>
    </ol>    
  </section>
<% end %>

<section class="content">
  <div class="row">
    <div class="col-xs-12">
      <div class="box box-primary">
        <div class="box-header">
          <div class="box-tools pull-right">
            <%= link_to new_motive_path(@motive), :class => 'btn btn-success' do %>
              <span class="glyphicon glyphicon-plus"></span>
              New Motive
            <% end %>          
          </div>
        </div>
        <div class="box-body table-responsive">
          <table class="table table-hover">
            <thead>
              <tr>
              <th>Descripcion</th>
                            <th></th>
                <th></th>
                <th></th>
              </tr>
            </thead>
            <tbody>
              <%= content_tag_for(:tr, @motives) do |motive| %>
              <td><%= motive.descripcion %></td>
                            <td><%= link_to 'Show', motive %></td>
                <td><%= link_to 'Edit', edit_motive_path(motive) %></td>
                <td><%= link_to 'Destroy', motive, method: :delete, data: { confirm: 'Are you sure?' } %></td>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</section>

