<% content_for :content_header  do %>
  <section class="content-header">
    <h1>Productos</h1>

    <ol class="breadcrumb">
      <li><a href="/"><i class="fa fa-dashboard"></i> Inicio</a></li>
      <li class="active">Productos</li>
    </ol>    
  </section>
<% end %>

<section class="content">
<div class="box-header">
  <div class="box-tools pull-left">

  <%= link_to new_product_path(@product), :class => 'btn btn-success' do %>
              <span class="glyphicon glyphicon-plus"></span>
              Nuevo
            <% end %> 
    </div> 
  </div>  

  <div class="row">
    <div class="col-xs-12">
      <div class="box box-primary">
        
        <div class="box-body table-responsive">
          <table id="tableProduct" class="table table-bordered table-hover">
            <thead>
              <tr>
              <th>Codigo</th>
              <th>Nombre</th>
              <th>Costo</th>
              <th>Precio de venta</th>
              <th>Cantidad</th>
              <th>Marca</th>
              <th>Categoria</th>
                <th></th>
              </tr>
            </thead>
            <tbody>

              <%= content_tag_for(:tr, @products) do |product| %>
                <td><%= product.codigo %></td>
              <td><%= disminuir(product.nombre)%></td>
              <td><%= product.costo %></td>
              <td><%= number_to_currency(product.precio_venta, unit: "") %></td>
              <td><%= number_to_currency(product.cantidad, unit: "") %></td>
              <td><%= number_to_currency(product.brand_nombre, unit: "") %></td>
              <td><%= product.category_nombre %></td>
              <td>
                  <%= link_to product, class: 'btn btn-info', title: 'Ver', 'data-toggle' => 'tooltip', 'data-placement' => 'rigth' do %>
                  <span class= "fa fa-eye"></span>
                  <% end %>

                  <%= link_to edit_product_path(product), class: 'btn btn-success', title: 'Editar', 'data-toggle' => 'tooltip', 'data-placement' => 'rigth' do %>
                  <span class= "fa fa-edit"></span>
                  <% end %>

                  <%= link_to product, method: :delete, data: { confirm: 'Esta seguro que desea eliminar este registro?' }, class: 'btn btn-danger', title: 'Eliminar', 'data-toggle' => 'tooltip', 'data-placement' => 'rigth' do %>
                  <span class= "fa fa-trash"></span>
                  <% end %>
              </td>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</section>

