<% content_for :content_header  do %>
  <section class="content-header">
    <h1>Listing <small>movements</small></h1>

    <ol class="breadcrumb">
      <li><a href="/"><i class="fa fa-dashboard"></i> Inicio</a></li>
      <li class="active">Movimientos</li>
    </ol>    
  </section>
<% end %>

<section class="content">
  <div class="row">
    <div class="col-xs-12">
      <div class="box box-primary">
        <div class="box-header">
          <div class="box-tools pull-right">
            <%= link_to new_movement_path(@movement), :class => 'btn btn-success' do %>
              <span class="glyphicon glyphicon-plus"></span>
              New Movement
            <% end %>          
          </div>
        </div>
        <div class="box-body table-responsive">
          <table class="table table-hover">
            <thead>
              <tr>
              <th>Fecha</th>
              <th>Ingreso/Egreso</th>
              <th>Motivo</th>
              <th>Cliente/Proveedor</th>
              <th></th>
              </tr>
            </thead>
            <tbody>
              <% mov_del_dia = @movements.where(fecha: Date.today)%>
              <%= content_tag_for(:tr, mov_del_dia) do |movement| %>
              <td><%= movement.fecha %></td>
              <td><%= movement.motive %></td>
              <td><%= movement.tipo %></td>
              <td><%= movement.person %></td>
                            <td><%= link_to 'Show', movement %></td>
                <td><%= link_to 'Edit', edit_movement_path(movement) %></td>
                <td><%= link_to 'Destroy', movement, method: :delete, data: { confirm: 'Are you sure?' } %></td>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</section>

