        <%= f.label :motive %>
        <%= f.text_field :motive, :class => "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :tipo %>
        <%= f.text_field :tipo, :class => "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :person %>
        <%= f.text_field :person, :class => "form-control" %>
      </div>
      <div class="form-group">
        <%= f.submit :class => "btn btn-primary" %>
      </div>
    <% end %>
    </div>
  </div>
