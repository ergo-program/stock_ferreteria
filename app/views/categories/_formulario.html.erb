<% modal ||= false %>
<% remote = modal ? true : false %>

<%= form_for(Category.new, validate: true, remote: remote, html: {role: :form, 'data-model' => 'category'}) do |f| %>

<section class="content invoice">
  <div class="row">
    <div class="col-md-10">

      <div class="form-group">
        <%= f.label :nombre %>
        <%= f.text_field :nombre, :class => "form-control", autofocus:true %>
      </div>
      <div class="form-group">
        <%= f.submit "Agregar", :class => "btn btn-primary" %>
        <button type="button" class="btn btn-primary" data-dismiss="modal">Cancelar</button>
      </div>
      </div>
    <% end %>
    </div>
  </div>
</section> 