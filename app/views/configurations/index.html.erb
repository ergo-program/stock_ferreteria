<% content_for :content_header  do %>
  <section class="content-header">
    <h1>Listing <small>configurations</small></h1>

    <ol class="breadcrumb">
      <li><a href="/"><i class="fa fa-dashboard"></i> Home</a></li>
      <li class="active">configurations</li>
    </ol>    
  </section>
<% end %>

<section class="content">
  <div class="row">
    <div class="col-xs-12">
      <div class="box box-primary">
        <div class="box-header">
          <div class="box-tools pull-right">
            <%= link_to new_configuration_path(@configuration), :class => 'btn btn-success' do %>
              <span class="glyphicon glyphicon-plus"></span>
              New Configuration
            <% end %>          
          </div>
        </div>
        <div class="box-body table-responsive">
          <table class="table table-hover">
            <thead>
              <tr>
              <th>Nombre</th>
              <th>Direccion</th>
              <th>Telefono</th>
              <th>Email</th>
              <th>Imagen</th>
              <th>Tiempo espera</th>
                            <th></th>
                <th></th>
                <th></th>
              </tr>
            </thead>
            <tbody>
              <%= content_tag_for(:tr, @configurations) do |configuration| %>
              <td><%= configuration.nombre %></td>
              <td><%= configuration.direccion %></td>
              <td><%= configuration.telefono %></td>
              <td><%= configuration.email %></td>
              <td><%= configuration.imagen %></td>
              <td><%= configuration.tiempo_espera %></td>
                            <td><%= link_to 'Show', configuration %></td>
                <td><%= link_to 'Edit', edit_configuration_path(configuration) %></td>
                <td><%= link_to 'Destroy', configuration, method: :delete, data: { confirm: 'Are you sure?' } %></td>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</section>

