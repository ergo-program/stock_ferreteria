<section class="content invoice">
  <div class="row">
    <div class="col-md-10">
      <%= form_for @parameter, validate: true do |f| %>

        <% if @parameter.errors.any? %>
          <div class="alert alert-danger alert-dismissable" role="alert">
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">x</button>

            <ul>
            <% @parameter.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
            </ul>
          </div>
        <% end %>

      <form class="form-horizontal">

      <p class="text-primary"><i class="">* Campos obligatorios</i></p>

      <div class="field col-md-12 form-group"></div>

      <div class="field col-md-12 form-group">
        <div class="field col-md-6 form-group required">
          <%= f.label :nombre, :class => 'control-label' %>
          <%= f.text_field :nombre,:maxlength => 50, :class => "form-control", autofocus:true%>
        </div>
        <div class="field col-md-6 form-group required">
          <%= f.label :direccion, :class => 'control-label' %>
          <%= f.text_field :direccion,:maxlength => 50, :class => "form-control" %>
        </div>
      </div>
        
      <div class="field col-md-12 form-group">
        <div class="field col-md-4 form-group required">
          <%= f.label :telefono, :class => 'control-label' %>
          <%= f.text_field :telefono,:maxlength => 10, :class => "form-control" %>
        </div>

        <d class="field col-md-2 form-group"></d>

        <div class="field col-md-5 form-group">
          <%= f.label :email, :class => 'control-label' %>
          <%= f.text_field :email,:maxlength => 50, :class => "form-control" %>
        </div>
      </div>
      <div class="field col-md-12 form-group">
        <div class="field col-md-6 form-group">
          <%= f.label :imagen, 'Logotipo', :class => 'col-md-6 control-label' %><br>
          <div class="col-md-8">
            <%= f.file_field :imagen, :onchange => 'previewFile()'%>
            <div> <br>
              <img src= <%= Parameter.first.imagen %> height="40" >
            </div>    
          </div>
        </div>
      </div>


      <div class="form-group">
        <% if controller.action_name == 'edit'  %>
            <%= f.submit "Guardar", :class => "btn btn-primary" %>
          <% else %>
            <%= f.submit "Agregar", :class => 'btn btn-primary'%>
          <% end %>
      </div>
    <% end %>
    </div>
  </div>
</section> 